<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JARSpeed"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name="fr.iutrodez.jarspeed.ui.EditProfilActivity"
            android:exported="false" />
        <activity
            android:name="fr.iutrodez.jarspeed.ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.iutrodez.jarspeed.ui.RegisterActivity"
            android:screenOrientation="portrait"
        />
        <activity
            android:name="fr.iutrodez.jarspeed.ui.MapActivity"
            android:screenOrientation="portrait"
        />
        <activity
            android:name="fr.iutrodez.jarspeed.ui.ProfilActivity"
            android:screenOrientation="portrait"
        />
        <activity
            android:name="fr.iutrodez.jarspeed.ui.AllCoursesActivity"
            android:screenOrientation="portrait"
        />
    </application>

</manifest>